<div class="col-md-12">

	<%= render "shared/alert-box"%>

	<div class="row">
		<h3 class="mytitle">Listing users (count: <%= @users.count %>)</h3>
	</div>

	<div class="row" style="background: white">
		<table class="table table-bordered table-hover">

			<tr>
				<th>Name</th>
				<th>E-mail</th>
				<th>Status</th>
				<th>Donations</th>
				<th>Created</th>
			</tr>

			<% @users.each do |user| %>
			<tr>
				<td><%= user.full_name %></td>
				<td><%= user.email %></td>
				<td><%= user.role %></td>
				<td><%= user.donations.count %></td>
				<td><%= user.created_at %></td>
			</tr>
			<% end %>
		</table>
	</div>

		<div class="row">
		<h3 class="mytitle">Listing lists (count: <%= @lists.count %>)</h3>
	</div>

	<div class="row" style="background: white">
		<table class="table table-striped table-bordered table-hover">

			<tr>
				<th>Occasion</th>
				<th>Occasion of</th>
				<th>User name</th>
				<th>Gifts</th>
				<th>Created</th>
			</tr>

			<% @lists.each do |list| %>
			<tr>
				<td><%= link_to list.occasion, User.token_url(user_id: list.owner.id, list_id: list.id), target: "blank" %></td>
				<td><%= list.occasion_of %></td>
				<td><%= list.user_id %></td>
				<td><%= list.gifts.count %></td>
				<td><%= list.created_at %></td>
			</tr>
			<% end %>
		</table>
	</div>
</div>
