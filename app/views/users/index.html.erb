<div class="col-xs-8">

	<%= render "shared/alert-box"%>

	<div class="row">
		<h1>Listing users</h1>
	</div>

	<div class="row">
		<table class="table table-striped table-bordered table-hover">

			<tr>
				<th>Name</th>
				<th>E-mail</th>
				<th>Created</th>
			</tr>

			<% @users.each do |user| %>
			<tr>
				<td><%= user.name %></td>
				<td><%= user.email %></td>
				<td><%= user.created_at %></td>
			</tr>
			<% end %>
		</table>
	</div>
</div>
