	<% flash.each do |name, msg| -%>
	<div class="row">
		<div class="bs-component">
			<div class="alert alert-dismissible alert-<%= name %>">
				<button type="button" class="close" data-dismiss="alert">
					&times;
				</button>
				<%= msg.html_safe %>
			</div>
		</div>
	</div>
	<% end -%>
	<%= yield %>