<div class="row">
	<div class="col-md-6 col-sm-6 col-centered">
		<h3>Přihlášení</h3>

		<%= render "shared/alert-box"%>

		<div class="row">
			<div class="panel panel-default">
				<div class="panel-body">
					<%= bootstrap_form_tag url: '/login' do |f| %>
					<%= f.email_field :email %>
					<%= f.password_field :password, label: "Heslo" %>
					<%= f.submit "Chci dovnitř" %>
					<% end %>
				</div>
			</div>
		</div>
		<div class="text-center">
			Pokud ještě nemáš účet, můžeš si ho vytvořit <%= link_to 'zde', signup_path %>.
		</div>
	</div>
</div>