<div class="row">
	<div class="col-md-6 col-sm-6 col-centered">
		<h3 class="mytitle">Přihlášení</h3>

		<%= render "shared/alert-box"%>

			<div class="panel panel-default">
				<div class="panel-body">
					<%= bootstrap_form_tag url: '/login' do |f| %>
					<%= f.email_field :email %>
					<%= f.password_field :password, label: "Heslo" %>
					<%= hidden_field_tag 'ga_user_id', '', :class => 'ga_user_id' %>
					<%= f.submit "Chci dovnitř" %>
					&nbsp;&nbsp;&nbsp;<%= link_to 'smazat', @gift, :method => :delete, :confirm => "Určitě?" if current_page?(action: 'edit') %>
					<% end %>
				</div>
			</div>
		<div class="text-center">
			<p class="mysubtitle">Pokud ještě nemáš účet, můžeš si ho vytvořit <%= link_to 'zde', signup_path, class: "opposite" %>.</p>
		</div>
	</div>
</div>
