<h4>Odkazy</h4>
<%= bootstrap_form_for(Url.new, :html => {:id => "urlform"}, remote: true) do |f| %>
<%= f.text_field :data, hide_label: true, id: "url", class: "input-sm", placeholder: "vlož odkaz na stránky s produktem" %>
<%= f.hidden_field :gift_id, value: Rails.application.routes.recognize_path(request.original_url)[:id] %>
<% end %>

<script>
	$("#urlform").submit( function(event) {  	// zamezí odeslání prázdného formu
		url = $("#url");
		if ( url.val().length === 0 ) {
			url.fadeOut(500);
			url.fadeIn(500);
			$("#url").removeClass('waiting');
			event.preventDefault();
		}
	});

	$('#url').on('paste', function () {				// submit on paste
  		var element = this;
  		setTimeout(function () {
    		var text = $(element).val();
				$("#url").addClass('waiting');
    		$("#urlform").submit();
  		}, 100);
	});

	$('#url').on('blur', function () {				// submit on lost focus (klikne vedle)
			$("#url").addClass('waiting');
			$("#urlform").submit();
  	});
</script>
