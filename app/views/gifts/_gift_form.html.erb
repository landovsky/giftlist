<div class="panel panel-default">
	<div class="panel-body">
		<span class="glyphicon glyphicon-plus-sign text-primary" style="font-size: 20pt; float: left"></span>

		<div class="col-md-10 col-lg-8">
			<%= bootstrap_form_for(@gift) do |f| %>
			<%= f.text_field :name, label: "co si přeju", placeholder: "kořenky" %>
			<%= f.text_area :description, label: "popis", placeholder: "20 kusů skleněných průhledných kořenek" %>
			<%= f.text_field :price_range, label: "cenové rozpětí", placeholder: "350..450 Kč" %>
			<%= f.hidden_field :list_id, value: @list.id%>
			<%= f.primary "uložit", class: "btn btn-primary" %>
			<% end %>
		</div>
	</div>
</div>