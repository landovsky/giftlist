<div class="col-md-6 col-sm-4" id="<%= gift.container_id %>">
	<div class="panel panel-<%= gift.panel_style %>" style="margin-bottom: 10px">

		<div class="panel-heading">
			<a data-toggle="collapse" data-target="#<%= gift.collapse_id%>" data-parent="#accordion"> <span class="shref"></span> </a>
			<div class="panel-title">
				<span class="glyphicon glyphicon-gift">&nbsp;</span>
				<%= link_to gift.name, edit_gift_path(gift.id), class: "clickable" if gift.list.owner?(session_user) %>
				<%= gift.name if !gift.list.owner?(session_user) %>
				<%= gift.taken_badge %>
			</div>
		</div>
		<div class="panel-body collapse in" id="<%= gift.collapse_id%>">
			<p>
				<span class="glyphicon glyphicon-heart drop">&nbsp;</span><%= gift.description %>
			</p>
			<p>
				<span class="glyphicon glyphicon-question-sign drop">&nbsp;</span><%= gift.price_range %>
			</p>
			<%= link_to 'zrušit mojí rezervaci', take_gift_path(gift.id), remote: true, class: "clickable" if gift.taken?(session_user) == "self"%>
			<%= link_to 'rezervovat', take_gift_path(gift.id), remote: true, class: "clickable" if !gift.taken?%>
		</div>
	</div>
</div>
