<div class="panel panel-default">
	<div class="panel-body">
		<div class="col-md-1 btn-lg">
			<span class="glyphicon glyphicon-plus-sign text-primary" style="font-size: 16pt; float: left"></span>
		</div>
		<div class="col-md-10 col-lg-10">
			<%= bootstrap_form_for(list, layout: :inline) do |f| %>
			<%= f.text_field :occasion, hide_label: true, class: "input-sm", placeholder: "událost" %>
			<%= f.text_field :occasion_of, hide_label: true, class: "input-sm", placeholder: "koho" %>
			<%= f.text_field :occasion_date, hide_label: true, class: "input-sm", id: "datepicker", placeholder: "datum události" %>
			<%= f.primary "nový", class: "btn btn-primary" %>
			<% end %>
		</div>
	</div>
</div>

<script type="text/javascript">
	$(function() {
		$('#datepicker').datetimepicker({
			locale : 'cs',
			viewMode : 'days',
			format : 'dddd DD/MM/YYYY'
		});
	}); 
</script>